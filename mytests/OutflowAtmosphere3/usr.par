&testlist
        teststr=''
/

&filelist
  base_filename='./output/const'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
  nwauxio = 5
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   !ditsave_dat     = 100
   !ditsave_log     = 100
   dtsave_dat     = 0.5d-3
   dtsave_log     = 5.d-2
/

 &stoplist
   time_max = 1.d0
   dtmin = 1.0d-20
   !it_max = 100
/

 &methodlist
   time_integrator = 'twostep'
   flux_scheme     = 20*'hll' !'tvdlf'/'hll'
   limiter         = 20*'minmod' !'minmod'/'koren'
   source_split_usr = .false.
   typesourcesplit = 'ssf'
   small_values_method = 'replace'
   small_pressure = 1.d-8
   small_density = 1.d-8
/

&boundlist
  nghostcells  = 2
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 4*'special','special'
  typeboundary_max2 = 4*'cont','special'
  internalboundary = T
/

 &meshlist
   refine_max_level   = 1
   refine_criterion   = 0
   domain_nx1         = 128
   domain_nx2         = 512
   block_nx1          = 128
   block_nx2          = 128
   xprobmin1       = -0.0625d0
   xprobmax1       = 0.0625d0
   xprobmin2       = 1.0d0
   xprobmax2       = 1.5d0
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  courantpar       = 0.05d0
  !dtpar           = 2.d-6
 /

 &rhd_list
  He_abundance = 0.1d0
  rhd_gravity = .true.
  rhd_energy = .true.
  rhd_gamma = 1.6666667d0
  rhd_radiation_formalism = 'fld'
  radio_acoustic_filter = .false.
  size_ra_filter = 2
  rhd_radiation_force = .true.
  rhd_energy_interact = .true.
  rhd_radiation_diffusion = .true.
  rhd_radiation_advection = .true.
 /

 &fld_list
  fld_split = .true.
  fld_opacity_law = 'special'
  fld_diff_scheme = 'mg'
  fld_interaction_method = 'Halley'
  fld_fluxlimiter = 'Diffusion'
  fld_diff_tol = 1.d-4
  diff_coef_filter = .true.
  size_D_filter = 2
  /
