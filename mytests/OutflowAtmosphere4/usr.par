&testlist
        teststr=''
/

&filelist
  base_filename='./output/G2m02'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
  nwauxio = 4
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   ditsave_dat     = 500
   !ditsave_log     = 1
   dtsave_dat     = 5.d-2
   dtsave_log     = 5.d-2
/

 &stoplist
   time_max = 2.d0
   dtmin = 1.0d-20
   !it_max = 50000
/

 &methodlist
   time_integrator = 'threestep'
   flux_scheme     = 20*'hll'
   limiter         = 20*'minmod'
   source_split_usr = .false.
   typesourcesplit = 'sfs'
   small_values_method = 'replace'
   small_pressure = 1.d-8
   small_density = 1.d-8
/

&boundlist
  nghostcells  = 2
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 'special','cont','cont','cont','special'
  typeboundary_max2 = 4*'cont','special'
  internalboundary = T
/

 &meshlist
   refine_max_level   = 1
   refine_criterion   = 3
   domain_nx1         = 64
   domain_nx2         = 256
   block_nx1          = 64
   block_nx2          = 64
   xprobmin1       = -1.25d0
   xprobmax1       = 1.25d0
   xprobmin2       = 1.0d0
   xprobmax2       = 11.d0
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  courantpar       = 0.03d0
  !dtpar           = 2.d-6
 /

 &rhd_list
  He_abundance = 0.1d0
  rhd_gravity = .true.
  rhd_energy = .true.
  rhd_gamma = 1.6667d0
  rhd_radiation_formalism = 'fld'
  radio_acoustic_filter = .false.
  rhd_radiation_force = .true.
  rhd_energy_interact = .true.
  rhd_radiation_diffusion = .true.
  rhd_radiation_advection = .true.
 /

 &fld_list
  fld_split = .true.
  fld_opacity_law = 'special'
  fld_diff_scheme = 'mg'
  fld_interaction_method = 'Halley'
  fld_fluxlimiter = 'Diffusion'
  fld_diff_tol = 1.d-4
  /
