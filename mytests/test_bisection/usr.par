! $AMRVAC_DIR/setup.pl -d=22 -g=16,16 -p=hd -u=nul .......

&testlist
        teststr=''
/

&filelist
  base_filename='./output/fld'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = F
  nwauxio = 0
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   !dtsave_dat     = 2.d-4
   !ditsave_dat     = 100000000000
   !ditsave_log     = 100000000000
/

 &stoplist
   time_max = 1.d-6
   dtmin = 1.0d-20
   !it_max = 1000
/

 &methodlist
   time_integrator = 'onestep'
   flux_scheme     = 20*'hll'
   limiter         = 20*'koren'
   !tvdlfeps = 0.d0
   !typesourcesplit = 'sf'
/

&boundlist
  nghostcells  =  2
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 5*'periodic'
  typeboundary_max2 = 5*'periodic'
  typeghostfill= 'copy'
  internalboundary = T
/

 &meshlist
   refine_max_level   = 1
   domain_nx1         = 4
   domain_nx2         = 4
   block_nx1          = 4
   block_nx2          = 4
   xprobmin1       =  -0.5d0
   xprobmax1       =  0.5d0
   xprobmin2       =  0.0d0
   xprobmax2       =  1.0d0
   iprob=1
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  !courantpar       = 0.6d0
  dtpar = 1.d-10
 /

 &rhd_list
  rhd_energy = .true.
  rhd_gamma = 1.666667d0
  rhd_radiation_formalism = 'fld'
  rhd_radiation_force = .false.
  rhd_energy_interact = .true.
  rhd_radiation_diffusion = .false.
 /

 &fld_list
  fld_kappa0 = 0.34d0
  fld_split = .false.
  fld_opacity_law = 'const'
 /
