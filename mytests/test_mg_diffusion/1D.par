! $AMRVAC_DIR/setup.pl -d=22 -g=16,16 -p=hd -u=nul .......

&testlist
        teststr=''
/

&filelist
  base_filename='./output/1D'
  autoconvert      = T
  convert_type     = 'oneblock'
  level_io         = 1
  saveprim         = F
  nwauxio = 2
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   ditsave_log = 10
   dtsave_dat     = 2.d-2
/

 &stoplist
   !time_max = 1.d0
   !dtmin = 1.0d-20
   it_max = 500
/

 &methodlist
   time_stepper = 'twostep'
   time_integrator = 'IMEX_Midpoint'
   flux_scheme     = 20*'hll'
   limiter         = 20*'koren'
   !tvdlfeps = 0.d0
   !typesourcesplit = 'sf'
   small_values_method = 'ignore'
   check_small_values = T
/

&boundlist
  typeboundary_min1 = 4*'periodic'
  typeboundary_max1 = 4*'periodic'
  internalboundary = F
/

 &meshlist
   refine_max_level   = 3
   domain_nx1         = 64
   block_nx1          = 64
   xprobmin1       =  0.d0
   xprobmax1       =  2.d0
   iprob=1
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  !courantpar       = 0.6d0
  dtpar =   1.d-3
 /

 &rhd_list
  rhd_energy = .true.
  rhd_gamma = 1.666666666d0
  rhd_radiation_formalism = 'fld'
  rhd_radiation_advection = .false.
  rhd_radiation_force = .false.
  rhd_energy_interact = .false.
  rhd_radiation_diffusion = .true.
 /

 &fld_list
 !fld_split = .false.
 fld_kappa0 = 0.34d0
 fld_opacity_law = 'const'
 fld_diff_testcase = .true.
 fld_diff_scheme = 'mg'
 /
