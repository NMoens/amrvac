
 &filelist
        base_filename = 'promhd'
        saveprim      = .true.
        autoconvert   = .true.
        convert_type  = 'vtuBmpi'        
        nwauxio       = 1
 /
        restart_from_file = 'promhd0100.dat'

 &savelist
        itsave(1,1) = 0
        itsave(1,2) = 0
        dtsave_log  = 0.05d0
        dtsave_dat  = 5.0d0
 /

 &stoplist
        dtmin    = 1.d-6
        time_max = 200.0d0
 /

 &methodlist
        time_integrator  = 'twostep'
        flux_scheme      = 20*'tvdlf'
        limiter          = 20*'vanleer'
        small_pressure   = 1.0d-7
        small_density    = 1.0d-7
        trac             = .true.
        t_bott           = 2.d-2
        t_peak           = 1.6d0
 /

 &boundlist
        typeboundary_min1 = 3*'special'
        typeboundary_max1 = 3*'special'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 3
        block_nx1        = 64
        domain_nx1       = 960
        xprobmin1        = 0.d0
        xprobmax1        = 11.226121539299445d0
 /
        ditregrid        = 1

 &paramlist
        typecourant = 'maxsum'
        courantpar  = 0.8d0
 /

 &hd_list
        hd_radiative_cooling  = .true.
        hd_gravity            = .true.
        hd_thermal_conduction = .true.
 /

 &rc_list
        ncool      = 4000
        coolcurve  = 'JCcorona'
        coolmethod = 'exact'
        tlow       = 4.17d-3
        Tfix       = .true.
 /
