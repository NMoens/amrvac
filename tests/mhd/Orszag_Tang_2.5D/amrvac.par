 &filelist
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        base_filename = 'ot_2d_ct_hll'
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 1
        dtsave_dat    = 0.003
 /
        ditsave_dat   = 1

 &stoplist
        time_max      = 0.033
 /
        it_max=20

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /
        solve_internal_e=.true.

 &boundlist
        typeboundary_min1  = 8*'cont'
        typeboundary_min2  = 8*'cont'
        typeboundary_max1  = 8*'cont'
        typeboundary_max2  = 8*'cont'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 3
    	refine_threshold = 20*0.2d0
        domain_nx1    = 64
        domain_nx2    = 64
        block_nx1     = 16
        block_nx2     = 16
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /
        w_refine_weight(1)=0.2d0
        w_refine_weight(5)=0.4d0
        w_refine_weight(6)=0.4d0

 &paramlist
        courantpar    = 0.8d0
 /

 &mhd_list
        typedivbfix   = 'ct'
 /
