 &filelist
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        base_filename = 'bt_2d_ct'
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 1
        ditsave_dat   = 1
 /
        dtsave_dat    = 0.1
        dtsave_log    = 0.1

 &stoplist
        it_max =10
 /
        time_max      = 0.3

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 8*'periodic'
        typeboundary_min2  = 8*'periodic'
        typeboundary_max1  = 8*'periodic'
        typeboundary_max2  = 8*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 3
    	refine_threshold = 20*0.2d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 64
        domain_nx2    = 64
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        courantpar    = 0.8d0
 /

 &mhd_list
        typedivbfix   = 'ct'
 /
