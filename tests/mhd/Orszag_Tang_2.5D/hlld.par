 &filelist
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        base_filename = 'ot_2d_hlld_cada3'
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        dtsave_log   = 0.01
        dtsave_dat   = 0.1
 /

 &stoplist
        time_max      = 0.5
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hlld'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 6*'periodic'
        typeboundary_min2  = 6*'periodic'
        typeboundary_max1  = 6*'periodic'
        typeboundary_max2  = 6*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 1
    	refine_threshold = 20*0.4d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 64
        domain_nx2    = 64
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        courantpar    = 0.6d0
 /

 &mhd_list
        typedivbfix   = 'glm'
 /
